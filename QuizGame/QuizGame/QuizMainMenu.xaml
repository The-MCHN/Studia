<Window x:Class="QuizGame.QuizMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGame"
        mc:Ignorable="d"
        Title="QuizMainMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Start_Button" 
               IsEnabled="True" Click="Start_Button_Click" Content="Start" Grid.Column="0"/>
        <Button x:Name="Exit_Button" Click="Exit_Button_Click" Content="Exit" Grid.Column="1"/>

    </Grid>
</Window>
